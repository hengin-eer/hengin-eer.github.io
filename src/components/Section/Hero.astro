---
import { Image } from "astro:assets";
import ContactButton from "../button/ContactButton.astro";
import HERO_IMG from "../../../public/hero.jpg"

const profileTags = ["🧑‍🎓 Colledge Student", "💻 Programmer", "🐟 Fish lover"];
---

<section class="max-w-5xl mx-auto my-10 lg:my-[80px] px-10 lg:px-16 flex flex-col-reverse lg:flex-row items-center gap-y-16 lg:justify-between">
    <div class="w-min">
        <h1 class="w-max text-4xl sm:text-5xl leading-[1.6] font-hina">
            ようこそ、<br />
            Tim daikの世界へ
        </h1>
        <div class="py-8 flex flex-wrap gap-4">
            {profileTags.map((texts) => <div class=" px-4 py-1 rounded-full border-black border-2">{texts}</div>)}
        </div>
        <ContactButton />
    </div>
    <div class="relative">
        <Image class="w-[400px] aspect-[10/12] object-cover hero-image" src={HERO_IMG} alt="Timdaik's picture" />
        <img class="w-[400px] aspect-[10/12] absolute top-0 left-[50%] translate-x-[-50%]" src={"/hero-image-subframe.svg"} alt="subframe" />
    </div>
</section>

<style>
    .hero-image {
        mask-image: url('/hero-image-mask.svg');
        mask-repeat: no-repeat;
        mask-position: center;
				mask-size: contain;
    }
</style>
