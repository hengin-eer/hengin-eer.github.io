---
import ContactButton from "./ContactButton.astro";
import { Icon } from "astro-iconify";
---
<section class="hero">
    <div class="hero-wrapper">
        <div class="left-part">
            <div class="text-area">
                <h1>Hi, I'm timtim.</h1>
                <p>
                    Hi, I'm a student engineer specializing in front-end
                    development.
                </p>
            </div>
            <div class="stecker-area">
                <p>üßë‚Äçüéì Colledge Student</p>
                <p>üíª Developer</p>
                <p>üêü Fish lover</p>
            </div>
            <div class="contact-area">
                <ContactButton />
            </div>
        </div>

        <div class="right-part">
            <img src="/hero.jpg" alt="hero" />
        </div>
    </div>
</section>

<style>
    .hero {
        height: calc(100vh - 80px);
        width: 100%;
        padding: 100px 30px;
        background: var(--green);
        overflow: hidden;

        .hero-wrapper {
            margin-inline: auto;
            display: flex;
            justify-content: center;
            align-items: start;
            gap: 10vw;

            .left-part {
                margin-top: 100px;
                display: flex;
                flex-direction: column;

                .text-area {
                    margin-bottom: 40px;

                    h1 {
                        margin-bottom: 20px;
                        font-size: 84px;
                        font-weight: 700;
                        line-height: 1.2;
                    }

                    p {
                        font-size: 28px;
                        font-weight: 400;
                        line-height: 1.6;
                    }
                }

                .stecker-area {
                    margin-bottom: 40px;
                    display: flex;
                    flex-wrap: wrap;
                    gap: 20px;

                    >p {
                        padding: 10px 25px;
                        border: 2px solid var(--black);
                        border-radius: 30px;
                        font-size: 20px;
                        font-weight: 400;
                        color: var(--black);
                        /* background: var(--green); */
                    }
                }
            }

            .right-part {
                margin-bottom: 30px;
                img {
                    width: 30vw;
                    aspect-ratio: 1/2;
                    object-fit: cover;
                }
            }
        }
    }
</style>
