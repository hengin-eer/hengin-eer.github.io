---
import "@fontsource/zen-kaku-gothic-new";
import "@fontsource/shippori-antique-b1";
import "@fontsource/fira-code";
import "@fontsource-variable/comfortaa";
import "@fontsource/averia-serif-libre";
import Header from "../components/Header/Header.astro";
import Footer from "@components/Footer/Footer.astro";
import { ClientRouter } from "astro:transitions";
import { SITE_DESCRIPTION, SITE_TITLE } from "src/constant/SITE";

// TODO: OGP画像の設定追加
// Propsを用意して、ブログやWorksページのサムネイルを使えるようにする
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={SITE_DESCRIPTION} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | {SITE_TITLE}</title>
		<meta property="og:title" content={`${title} | ${SITE_TITLE}`} />
		<meta property="og:site_name" content={SITE_TITLE} />
		<meta property="og:description" content={SITE_DESCRIPTION} />
		<!-- <meta property="og:image" content="/ogp-image.png" /> -->
		<meta property="og:url" content={Astro.url} />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="ja_JP" />
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@timdaik" />
		<meta name="twitter:title" content={`${title} | ${SITE_TITLE}`} />
		<meta name="twitter:description" content={SITE_DESCRIPTION} />
		<ClientRouter />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/katex@0.16.4/dist/katex.min.css"
			integrity="sha384-vKruj+a13U8yHIkAyGgK1J3ArTLzrFGBbBc0tDp4ad/EyewESeXE/Iv67Aj8gKZ0"
			crossorigin="anonymous"
		/>
		<!-- Google tag (gtag.js) -->
		<script
			is:inline
			type="text/partytown"
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-8XKK44HY9Y"></script>
		<script is:inline type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-8XKK44HY9Y");
		</script>
	</head>
	<body class="min-h-[100dvh]">
		<div class="relative min-h-[100dvh]">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>
<style is:global>
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}
	:root {
		--primary-green: #18ef95;
		--primary-dark-green: #00b86b;
		--primary-blue: #13aed0;
		--primary-red: #f6444f;
		--white: #ffffff;
		--gray-base: #9ebcca;
		--gray-light: #edf0f7;
		--gray-dark: #547b8d;
		/* --black: #000000; */
		--black: rgb(26, 37, 80);
		--accent: 136, 58, 234;
		--shadow-color: rgba(0, 0, 0, 0.1);
	}
	html {
		font-family: "Zen Kaku Gothic New";
		/* font-family: "Shippori Antique B1", sans-serif; */
		background: var(--white);
		background-size: 224px;
		color: var(--black);
	}
	code {
		font-family: "Fira Code", monospace;
	}
	.font-shippori {
		font-family: "Shippori Antique B1";
	}
	.font-comfortaa {
		font-family: "Comfortaa Variable";
	}
	.font-averia {
		font-family: "Averia Serif Libre";
	}
</style>
